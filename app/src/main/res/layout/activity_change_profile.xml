<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="greenlife.com.vn.greenfood.activities.ProfileActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_status"
        android:background="@color/primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_below="@+id/tb_status"
        android:id="@+id/rl_avatar"
        android:layout_width="match_parent"
        android:background="#F0FFF2"
        android:layout_height="120dp">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iv_profile_image"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/banh_da_cua"
            app:border_color="@color/white"
            app:border_width="3dp" />
        <TextView
            android:id="@+id/tv_changeAvatar"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/iv_profile_image"
            android:text="Thay đổi ảnh đại diện"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@color/primary"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_userinfo"
        android:layout_below="@+id/rl_avatar"
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_height="wrap_content">
        <ImageView
            app:srcCompat="@drawable/ic_person_black_24dp"
            android:id="@+id/iv_name"
            android:layout_width="30dp"
            android:layout_marginTop="10dp"
            android:layout_height="30dp" />
        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_name"
            android:layout_marginStart="16dp"
            android:text="Duog tu"
            android:textSize="20sp"
            />
        <ImageView
            app:srcCompat="@drawable/ic_info_outline_black_24dp"
            android:layout_marginTop="16dp"
            android:id="@+id/iv_description"
            android:layout_below="@+id/iv_name"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <EditText
            android:id="@+id/et_description"
            android:layout_below="@+id/et_username"
            android:layout_toEndOf="@id/iv_description"
            android:layout_width="match_parent"
            android:layout_marginStart="16dp"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="20sp"
            />
        <ImageView
            app:srcCompat="@drawable/ic_language_black_24dp"
            android:layout_marginTop="24dp"
            android:id="@+id/iv_link"
            android:layout_below="@+id/iv_description"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <EditText
            android:id="@+id/et_link"
            android:layout_below="@+id/et_description"
            android:layout_toEndOf="@id/iv_link"
            android:layout_width="match_parent"
            android:layout_marginStart="16dp"
            android:layout_height="wrap_content"
            android:text="Link"
            android:textSize="20sp"
            android:autoLink="web"
            />
        <ImageView
            app:srcCompat="@drawable/ic_mail_outline_black_24dp"
            android:layout_marginTop="16dp"
            android:id="@+id/iv_mail"
            android:layout_below="@+id/iv_link"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:layout_marginTop="16dp"
            android:id="@+id/et_mail"
            android:layout_below="@+id/et_link"
            android:layout_toEndOf="@id/iv_mail"
            android:layout_width="match_parent"
            android:layout_marginStart="16dp"
            android:layout_height="wrap_content"
            android:text="Mail"
            android:textSize="20sp"
            />
        <ImageView
            app:srcCompat="@drawable/ic_phone_android_black_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/iv_phone"
            android:layout_below="@id/iv_mail"
            android:layout_marginTop="16dp"/>
        <TextView
            android:layout_marginTop="16dp"
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_mail"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/iv_phone"
            android:textSize="20sp"
            android:text="Phone"/>
    </RelativeLayout>


</RelativeLayout>
