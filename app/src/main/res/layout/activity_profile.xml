<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="greenlife.com.vn.greenfood.activities.ProfileActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_status_profile"
        android:background="@color/primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_marginTop="45dp"
        android:id="@+id/rl_avatar"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iv_profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/banh_da_cua"
            app:border_color="@color/white"
            app:border_width="3dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_toRightOf="@id/iv_profile_image"
            android:layout_width="match_parent"
            android:layout_height="120dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_centerInParent="true"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_NoPost"
                            android:layout_gravity="center_horizontal"
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_gravity="center_horizontal"
                            android:text="Bài viết"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ln_edit_profile"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <RelativeLayout
                    android:background="@drawable/rectangle_stroke_curved_gray"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="8"
                    android:layout_width="0dp"
                    android:layout_height="36dp">
                    <TextView
                        android:id="@+id/btn_fixInfor"
                        android:singleLine="true"
                        android:text="Chỉnh sửa trang cá nhân"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/rectangle_stroke_curved_gray"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="36dp">
                    <ImageView
                        android:id="@+id/btn_Settings"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/logout"
                        />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:padding="16dp"
        android:id="@+id/rl_userinfo"
        android:layout_below="@+id/rl_avatar"
        android:layout_width="match_parent"
        android:layout_height="110dp">
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duog tu"
            android:textStyle="bold"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/tv_description"
            android:layout_below="@+id/tv_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/tv_link"
            android:layout_below="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:text="Link"
            android:textSize="20sp"
            android:textColor="#22A8BF"
            />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:padding="16dp"
        android:id="@+id/rv_image_food"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/rl_userinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>


</RelativeLayout>
